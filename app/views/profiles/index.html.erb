<div class="col-md-6">
<%= link_to "New Profile", new_profile_path, class: 'btn btn-default btn-lg pull-right' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th width="10%">No</th>
      <th>Name</th>
      <th width="20%">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each_with_index do |profile, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= profile.name %></td>
      <td>
        <% link_to "<span class='glyphicon glyphicon-edit'></span".html_safe, edit_profile_path(profile), class: 'btn btn-default' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>